<MudGrid>
    <MudItem xs="12">
        @if (_parsedAnswer.HasValue is true)
        {
            var html = _parsedAnswer.Value.AnswerHtml;
            <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true">
                <MudTabPanel Icon="@Icons.Custom.Brands.Awesome" Text="Answer" ToolTip="Answer text">
                    <ChildContent>
                        <MudPaper Class="pa-6" Elevation="3">
                            <MudText Typo="Typo.body1">
                                @((MarkupString)html)
                            </MudText>
                        </MudPaper>
                    </ChildContent>
                </MudTabPanel>
                <MudTabPanel Icon="@Icons.Material.Filled.Lightbulb" Text="Thoughts" ToolTip="@ShowThoughts"
                    Disabled="@(Retort is { Thoughts: null })">
                    <ChildContent>
                        <MudPaper Class="pa-6" Elevation="3">
                            <MudText Typo="Typo.body1">
                                @((MarkupString)Retort.Thoughts!)
                            </MudText>
                        </MudPaper>
                    </ChildContent>
                </MudTabPanel>
                <MudTabPanel Icon="@Icons.Material.Filled.TextSnippet" Text="Supporting Content"
                    ToolTip="@ShowContent" Disabled="@(Retort is { DataPoints: null } or { DataPoints.Length: 0 })">
                    <ChildContent>
                        <MudPaper Class="pa-6" Elevation="3">
                            <SupportingContent DataPoints="Retort.DataPoints" />
                        </MudPaper>
                    </ChildContent>
                </MudTabPanel>
            </MudTabs>
        }        
    </MudItem>
</MudGrid>
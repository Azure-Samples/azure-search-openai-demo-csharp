<MudGrid Justify="Justify.Center" Spacing="2">
    <MudItem xs="12">
        <MudStack Class="pb-4">
            <MudIcon Icon="@Icons.Material.Filled.AutoAwesome"
                     Class="icon-huge align-self-center" Color="Color.Primary" />
            <MudText Typo="Typo.h3" Class="align-self-center">@Message</MudText>
        </MudStack>
    </MudItem>
    <MudItem xs="3">
        <MudPaper Elevation="4" Height="12rem" onclick="@(async () => await OnClickedAsync(WhatsIncluded))"
                  Class="d-flex pa-8 clickable flex-column align-center justify-center mud-width-full rounded dim">
            <MudText Typo="Typo.h5">@WhatsIncluded</MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="3">
        <MudPaper Elevation="4" Height="12rem" onclick="@(async () => await OnClickedAsync(WhatsPerfReview))"
                  Class="d-flex pa-8 clickable flex-column align-center justify-center mud-width-full rounded dim">
            <MudText Typo="Typo.h5">@WhatsPerfReview</MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="3">
        <MudPaper Elevation="4" Height="12rem" onclick="@(async () => await OnClickedAsync(WhatsProductManagerDo))"
                  Class="d-flex pa-8 clickable flex-column align-center justify-center mud-width-full rounded dim">
            <MudText Typo="Typo.h5">@WhatsProductManagerDo</MudText>
        </MudPaper>
    </MudItem>
</MudGrid>
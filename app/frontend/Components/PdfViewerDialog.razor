<MudDialog DisableSidePadding="true">
    <DialogContent>
        <MudContainer Style="min-height: 60vh; max-height: 75vh; overflow-y: scroll">
            <!-- TODO: Make this URL dynamic -->
            <iframe src=@($"https://localhost:7181/api/content/{Title}#view-fitV") frameborder="1" title="@Title" />
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Size="Size.Large"
                   StartIcon="@Icons.Material.Filled.Close"
                   OnClick="@OnCloseClick">Close</MudButton>
    </DialogActions>
</MudDialog>